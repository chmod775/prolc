{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",

    "lib": ["ES2022"],
    "types": ["node"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src", "ex1.ts"],
  "exclude": ["dist", "node_modules"]
}